<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/pkgs_fragment">

    <fragment
        android:id="@+id/pkgs_fragment"
        android:name="com.cc12703.app.docsetreader.ui.pkgs.PkgsFragment"
        tools:layout="@layout/pkgs_fragment">

        <action
                android:id="@+id/action_pkgs_fragment_to_read_fragment"
                app:destination="@id/read_fragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/read_fragment"
        android:name="com.cc12703.app.docsetreader.ui.read.ReadFragment"
        tools:layout="@layout/read_fragment">

        <argument
            android:name="plantId"
            app:argType="string" />
    </fragment>

</navigation>
